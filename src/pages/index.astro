---
import { MainLayout } from "@/layouts";

import { blogItems, githubItems } from "@/data";
import { Image } from "astro:assets";

const blogCount = blogItems.length;
const lastestBlog = blogItems[blogItems.length - 1];
const githubCount = githubItems.length;
const lastestGithub = githubItems[githubItems.length - 1];
---

<MainLayout>
  <main>
    <div class="grid grid-cols-2 gap-8">
      <section class="border border-dashed rounded w-full bg-white">
        <div>
          <Image
            src={lastestBlog.image}
            alt={""}
            class={"w-full aspect-video"}
          />
        </div>
        <div class="flex flex-row justify-between items-center mt-4 p-4">
          <a href={`/blog`}>
            <h2 class="flex-1">博客分享</h2>
          </a>
          <div
            class="flex flex-row items-center text-[12px] gap-1 bg-black text-white py-1 px-2 rounded-md"
          >
            <span>收集</span>
            <span>{blogCount}</span>
          </div>
        </div>
      </section>
      <section class="border border-dashed p-4 rounded w-full bg-white">
        <div>
          <Image
            src={lastestGithub.banner}
            alt={""}
            class={"w-full aspect-video"}
          />
        </div>
        <div class="flex flex-row justify-between items-center mt-4 p-4">
          <a href={`/github`}>
            <h2 class="flex-1">开源项目</h2>
          </a>
          <div
            class="flex flex-row items-center text-[12px] gap-1 bg-black text-white py-1 px-2 rounded-md"
          >
            <span>收集</span>
            <span>{githubCount}</span>
          </div>
        </div>
      </section>
    </div>
  </main>
</MainLayout>
